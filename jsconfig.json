{
    "compilerOptions": {
        "target": "ES2015",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "src",
        "incremental": true,
        "paths": {
            "components/*": ["./components/*"],
            "features/*": ["./features/*"],
            "pages/*": ["./pages/*"],
            "utils/*": ["./utils/*"],
            "app/*": ["./app/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
